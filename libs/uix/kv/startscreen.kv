<StartScreen>

    MDToolbar:
        id: action_bar
        background_color: app.theme_cls.primary_color
        title: app.title
        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        elevation: 10
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}



        MDIconButton:
            id: button_1
            icon: "book"
            opposite_colors: True
            pos_hint: {"center_y": .5}
            on_press: app.show_kassa()
            #disabled: True
        MDIconButton:
            id: button_1
            opposite_colors: True
            icon: "truck-delivery"
            pos_hint: {"center_y": .5}
            left_action_items: [["menu", lambda x: x]]
        MDIconButton:
            id: button_1
            opposite_colors: True
            icon: "table"
            pos_hint: {"center_y": .5}
            left_action_items: [["menu", lambda x: x]]


